
class Student{
	int id;
	String name;
	float per;
	public void setId(int id) {
		this.id=id;
	}
	public int getId() {
		return id;
	}
	public void setName(String name) {
		this.name=name;
	}
	public String getName() {
		return name;
	}
	public void setPer(float per) {
		this.per=per;
	}
	public float getPer() {
		return per;
	}
}
public class EncapsulationDemo {
	public static void main(String[] args) {
		Student s1 = new Student();
		s1.setId(1);
		s1.setName("rudra");
		s1.setPer(56.4f);
	}
}
